[run]
branch = True
source =
    src
omit =
    */venv/*
    */site-packages/*
    tests/*
    setup.py
    src/app.py
    src/utils/db.py

[report]
fail_under = 85
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    if __name__ == "__main__":
    raise NotImplementedError

[html]
directory = coverage_html_report